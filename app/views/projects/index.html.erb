<!-- app/views/projects/index.html.erb -->

<h2> All the Projects </h2>

<ul>
  <% @projects.each do |project| %>
    <li class="project">
      <%= link_to project.name, project_path(project) %>

      <% if project.description.present? %>
        -
        <%= project.description %>
      <% end %>

      <%= render "links", project: project %>
    </li>
  <% end %>
</ul>
