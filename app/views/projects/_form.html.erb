<!-- views/projects/_form.html.erb -->

<%= form_for(project, html: { multipart: true }) do |f| %>

  <%= render 'layouts/errors', model: project %>

  <div class="field">
    <%= f.label :name %>
    <br />
    <%= f.text_field :name %>
  </div>

  <div class="field">
    <%= f.label :description %>
    <br />
    <%= f.text_area :description %>
  </div>

  <div class="field">
    <%= f.label :logo %>
    <br />
    <%= f.file_field :logo %>
  </div>

  <div class="actions">
    <%= f.submit %>
  </div>

<% end %>
