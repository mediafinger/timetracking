<!-- app/views/entries/index.html.erb -->

<h1><%= @project.name %></h1>
<ul>
  <% @entries.each do |entry| %>
    <li>
      <%= entry.hours %> h
      <%= entry.minutes %> m -
      <%= entry.date.strftime("%d.%m.%Y") %>
    </li>
  <% end %>
</ul>

<p>Hours worked this month: <%= @project.total_hours_in_month %></p>
